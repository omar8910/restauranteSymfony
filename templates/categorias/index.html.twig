{% extends 'base.html.twig' %}

{% block title %}Categorias index{% endblock %}

{% block body %}
<main>
    <h1>Categorias index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categoria in categorias %}
            <tr>
                <td>{{ categoria.id }}</td>
                <td>{{ categoria.nombre }}</td>
                <td>{{ categoria.descripcion }}</td>
                <td>
                    <a class="btn" href="{{ path('app_categorias_show', {'id': categoria.id}) }}">show</a>
                    <a class="btn" href="{{ path('app_categorias_edit', {'id': categoria.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_categorias_new') }}">Create new</a>
</main>
{% endblock %}
