{% extends 'base.html.twig' %}

{% block title %}Productos index{% endblock %}

{% block body %}
<main>
    <h1>Productos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Peso</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.peso }}</td>
                <td>{{ producto.stock }}</td>
                <td>
                    <a class="btn" href="{{ path('app_productos_show', {'id': producto.id}) }}">show</a>
                    <a class="btn" href="{{ path('app_productos_edit', {'id': producto.id}) }}">edit</a>
                <a class="btn" href="{{ path('app_carrito_add', {'id': producto.id}) }}">add to cart</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_productos_new') }}">Create new</a>
</main>
{% endblock %}
